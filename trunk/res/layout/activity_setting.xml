<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:switch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/update_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="版本更新"
            android:textSize="16dp"
            android:textColor="@color/text_black_color"
             />

        <TextView
            android:id="@+id/versions_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:textColor="@color/text_gray2_color"
            android:textSize="16dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/setting_agreement_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="服务协议"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/text_black_color"
         />

    <include layout="@layout/one_line_tv" />

    <TextView
        android:id="@+id/setting_about_us_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="关于我们"
        android:textSize="16dp"
        android:textColor="@color/text_black_color"
         />

    <include layout="@layout/one_line_tv"/>
    
    
    <Button 
        android:id="@+id/log_out_btn"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="49dp"
        android:background="@color/blue_bg_color"
        android:gravity="center"
        android:text="注册"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        />
    

</LinearLayout>